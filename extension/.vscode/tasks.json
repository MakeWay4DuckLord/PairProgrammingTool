{
    "version": "2.0.0",
    "command": "npm",
    "tasks": [
        {
            "label": "install",
            "command": "npm",
            "type": "process",
            "args": ["install"]
        },
        {
            "label": "build",
            "command": "npm",
            "type": "process",
            "args": ["run", "watch"],
            "dependsOn": "install",
        }
    ]
}